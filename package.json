{
  "name": "react-portal-universal",
  "version": "0.1.2",
  "description": "Wrapper for React's createPortal allowing for rendering portals on the server",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/tests/.*\\.spec\\.(ts|tsx|js)$",
    "testEnvironment": "node",
    "setupFiles": [
      "./tests/setup/rafPolyfill.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MichalZalecki/react-portal-universal.git"
  },
  "author": "Michal Zalecki <michal@michalzalecki.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MichalZalecki/react-portal-universal/issues"
  },
  "homepage": "https://github.com/MichalZalecki/react-portal-universal#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^21.1.4",
    "@types/jsdom": "^16.2.13",
    "@types/react": "^16.14.11",
    "@types/react-dom": "^16.9.14",
    "jest": "^21.2.1",
    "jsdom": "^16.6.0",
    "ts-jest": "^21.1.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "peerDependencies": {},
  "keywords": [
    "react",
    "react-dom",
    "react-portal",
    "createPortal",
    "SSR",
    "universal"
  ]
}
